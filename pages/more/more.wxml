<!--pages/more/more.wxml-->
<view class="bg">
  <image src="../../image/test.jpg" mode="aspectFit" class="avatar"></image>
  <view class="name">Trico</view>
</view>



<van-cell-group title="个人资料">
  <picker mode="date" value="{{birth}}" start="1900-01-01" end="{{today}}" bindchange="bindBirthChange">
<van-cell title="出生日期" is-link value="{{birth}}">
  <view
    slot="icon"
    class="iconfont icon-a-rili"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
</van-cell>
</picker>
<picker mode="selector"  bindchange="bindHandChange" range="{{handOption}}" value="{{hand}}">
<van-cell title="常用手" is-link value="{{handOption[hand]}}">
  <view
    slot="icon"
    class="iconfont icon-woshou"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
</van-cell>
</picker>
<van-cell title="龋齿" is-link url="../more_quchi/quchi">
  <view
    slot="icon"
    class="iconfont icon-a-yachibayazhuyateeth"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
</van-cell>
<van-cell title="正畸" is-link url="../more_zhengji/index" value="{{zhengjiList[zjType]}}">
  <view
    slot="icon"
    class="iconfont icon-a-yachiyakeyayi"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
</van-cell>
<van-cell title="牙刷类型" is-link url="../more_brush/index" value="{{yashuaHardList[yashuaHard]+yashuaSizeList[yashuaSize]}}">
  <view
    slot="icon"
    class="iconfont icon-yashualiebiao"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
</van-cell>
<van-cell title="牙膏类型" is-link url="../more_paste/index" value="{{yagaoList[yagao]}}">
  <view
    slot="icon"
    class="iconfont icon-a-yagao1"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
</van-cell>
</van-cell-group>

<van-cell-group title="个性化">
  <van-cell title="儿童模式">
  <view
    slot="icon"
    class="iconfont icon-ertong"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
  <view
    slot="extra"
  >
  <switch checked="{{prsnl_1}}" color="#1989FA" bindchange="bindPrsnlChange1"/>
  </view>
  
</van-cell>
<van-cell title="自定义时间">
  <view
    slot="icon"
    class="iconfont icon-a-shijian1"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
  <view
    slot="extra"
  >
  <picker mode="multiSelector" bindchange="bindMultiPickerChange" bindcolumnchange="bindMultiPickerColumnChange" value="{{multiIndex}}" range="{{multiArray}}" disabled="{{prsnl_2}}">
  <switch checked="{{prsnl_2}}" color="#1989FA" bindchange="bindPrsnlChange2"/>
  </picker>
  </view>
</van-cell>
<van-cell title="牙刷更换提醒">
  <view
    slot="icon"
    class="iconfont icon-a-tixing1"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
  <view
    slot="extra"
  >
  <switch checked="{{prsnl_3}}" color="#1989FA" bindchange="bindPrsnlChange3"/>
  </view>
</van-cell>
<van-cell title="播放音乐">
  <view
    slot="icon"
    class="iconfont icon-a-yinle"
    style="margin:0 20rpx 0 0; color:#549EE7"
  ></view>
  <view
    slot="extra"
  >
  <switch checked="{{prsnl_4}}" color="#1989FA" bindchange="bindPrsnlChange4"/>
  </view>
</van-cell>

</van-cell-group>


